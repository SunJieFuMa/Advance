<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_file_item_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_118"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/local_file_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:paddingEnd="@dimen/width_0"
        android:paddingLeft="@dimen/width_32"
        android:paddingRight="@dimen/width_0"
        android:paddingStart="@dimen/width_32"
        android:src="@drawable/icon_local_file_txt" />

    <TextView
        android:id="@+id/local_file_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/width_16"
        android:layout_marginStart="@dimen/width_16"
        android:layout_marginTop="@dimen/height_20"
        android:layout_toEndOf="@id/local_file_item_image"
        android:layout_toRightOf="@id/local_file_item_image"
        android:ellipsize="middle"
        android:maxLines="1"
        android:maxWidth="@dimen/width_300"
        android:text="@string/default_name"
        android:textColor="@color/color_black_191919"
        android:textSize="@dimen/text_size_28" />

    <TextView
        android:id="@+id/local_file_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_20"
        android:layout_marginLeft="@dimen/width_16"
        android:layout_marginStart="@dimen/width_16"
        android:layout_toEndOf="@id/local_file_item_image"
        android:layout_toRightOf="@id/local_file_item_image"
        android:text="@string/default_name"
        android:textColor="@color/color_gray_686868"
        android:textSize="@dimen/text_size_24" />

    <TextView
        android:id="@+id/local_file_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/local_file_item_size"
        android:layout_marginLeft="@dimen/width_16"
        android:layout_marginStart="@dimen/width_16"
        android:layout_toEndOf="@id/local_file_item_size"
        android:layout_toRightOf="@id/local_file_item_size"
        android:text="@string/default_name"
        android:textColor="@color/color_gray_686868"
        android:textSize="@dimen/text_size_24" />

    <ImageView
        android:id="@+id/local_file_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_20"
        android:layout_marginRight="@dimen/width_20"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/width_12"
        android:visibility="visible" />

    <TextView
        android:id="@+id/local_file_item_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:text="@string/local_book_import"
        android:textColor="@color/theme_primary"
        android:textSize="@dimen/text_size_24"
        android:visibility="gone" />

    <include
        layout="@layout/layout_view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true" />
</RelativeLayout>