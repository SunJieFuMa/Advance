<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/author_recommend"
    android:layout_width="@dimen/width_536"
    android:layout_height="@dimen/height_374"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/height_32"
    android:layout_marginLeft="@dimen/width_16"
    android:layout_marginRight="@dimen/width_16"
    android:layout_marginTop="@dimen/height_32"
    android:background="@drawable/background_shadow"
    android:elevation="@dimen/height_6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_118">

        <ImageView
            android:id="@+id/author_recommend_avatar"
            android:layout_width="@dimen/width_54"
            android:layout_height="@dimen/height_54"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginRight="@dimen/width_24"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_avatar_default"
            android:background="@drawable/background_avatar"
            android:elevation="@dimen/height_2"/>

        <TextView
            android:id="@+id/author_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/author_recommend_avatar"
            android:layout_toRightOf="@id/author_recommend_avatar"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:textColor="@color/color_black_444444"
            android:textSize="@dimen/text_size_30"
            tools:text="@string/default_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/author_recommend_name"
            android:layout_marginLeft="@dimen/width_6"
            android:layout_marginStart="@dimen/width_6"
            android:layout_toEndOf="@id/author_recommend_name"
            android:layout_toRightOf="@id/author_recommend_name"
            android:layout_marginBottom="@dimen/height_2"
            android:text="@string/reading"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/author_recommend_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/width_24"
            android:layout_marginEnd="@dimen/width_24"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_book_detailed_message"
            android:text="@string/author_recommend"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/author_recommend_cover"
            android:layout_width="@dimen/width_165"
            android:layout_height="@dimen/height_232"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginStart="@dimen/width_24"
            android:background="@drawable/background_shadow"
            android:contentDescription="@string/app_name"
            android:elevation="@dimen/height_4"
            android:scaleType="fitXY"
            android:src="@drawable/icon_cover_default" />

        <TextView
            android:id="@+id/author_recommend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/author_recommend_cover"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginStart="@dimen/width_24"
            android:layout_toEndOf="@id/author_recommend_cover"
            android:layout_toRightOf="@id/author_recommend_cover"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_30"
            tools:text="@string/default_name" />

        <TextView
            android:id="@+id/author_recommend_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_recommend_title"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginStart="@dimen/width_24"
            android:layout_marginTop="@dimen/height_32"
            android:layout_toEndOf="@id/author_recommend_cover"
            android:layout_toRightOf="@id/author_recommend_cover"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_28"
            tools:text="@string/default_name" />

        <TextView
            android:id="@+id/author_recommend_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_recommend_author"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginRight="@dimen/width_24"
            android:layout_marginTop="@dimen/height_32"
            android:layout_toEndOf="@id/author_recommend_cover"
            android:layout_toRightOf="@id/author_recommend_cover"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_gray_9b9b9b"
            android:textSize="@dimen/text_size_26"
            tools:text="@string/default_message" />
    </RelativeLayout>
</LinearLayout>