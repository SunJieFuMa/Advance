<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_recommend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_fill"
    android:elevation="@dimen/height_6"
    android:layout_marginBottom="@dimen/height_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_24"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32">

        <ImageView
            android:id="@+id/book_recommend_avatar"
            android:layout_width="@dimen/width_70"
            android:layout_height="@dimen/height_70"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_avatar_default" />

        <TextView
            android:id="@+id/book_recommend_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginStart="@dimen/width_24"
            android:layout_toEndOf="@id/book_recommend_avatar"
            android:layout_toRightOf="@id/book_recommend_avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_32"
            android:textStyle="bold"
            tools:text="@string/default_name" />
    </RelativeLayout>

    <TextView
        android:id="@+id/book_recommend_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_22"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_22"
        android:textColor="@color/color_black_3e3e3e"
        android:textSize="@dimen/text_size_26"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="@string/default_message" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_128"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:background="@color/color_white_f4f5f7">

        <ImageView
            android:id="@+id/book_recommend_cover"
            android:layout_width="@dimen/width_78"
            android:layout_height="@dimen/height_108"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_10"
            android:layout_marginStart="@dimen/width_10"
            android:background="@drawable/background_shadow"
            android:contentDescription="@string/app_name"
            android:elevation="@dimen/height_6"
            android:scaleType="fitXY"
            android:src="@drawable/icon_cover_default" />

        <TextView
            android:id="@+id/book_recommend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginRight="@dimen/width_24"
            android:layout_marginTop="@dimen/height_30"
            android:layout_toEndOf="@id/book_recommend_cover"
            android:layout_toRightOf="@id/book_recommend_cover"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_26"
            tools:text="@string/default_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/height_30"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginRight="@dimen/width_24"
            android:layout_toEndOf="@id/book_recommend_cover"
            android:layout_toRightOf="@id/book_recommend_cover"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_recommend_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray_686868"
                android:textSize="@dimen/text_size_22"
                tools:text="@string/default_name" />

            <TextView
                android:id="@+id/book_recommend_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_16"
                android:layout_marginRight="@dimen/width_16"
                android:textColor="@color/color_gray_686868"
                android:textSize="@dimen/text_size_22"
                tools:text="@string/default_name" />

            <TextView
                android:id="@+id/book_recommend_ending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray_686868"
                android:textSize="@dimen/text_size_22"
                tools:text="@string/default_name" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_22"
        android:layout_marginBottom="@dimen/height_22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/book_recommend_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_24"
            tools:text="@string/default_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_8"
            android:layout_marginRight="@dimen/width_8"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_main_dot"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/book_recommend_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_24"
            tools:text="@string/default_name" />
    </LinearLayout>
</LinearLayout>