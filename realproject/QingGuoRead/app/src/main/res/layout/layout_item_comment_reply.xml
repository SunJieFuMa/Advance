<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_reply_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_80"
    android:orientation="vertical"
    android:visibility="gone">

    <include
        layout="@layout/layout_view_dotted_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32" />

    <com.quduquxie.communal.widget.expression.ExpressionTextView
        android:id="@+id/comment_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_80"
        android:paddingBottom="@dimen/height_20"
        android:paddingLeft="@dimen/width_32"
        android:paddingRight="@dimen/width_32"
        android:paddingTop="@dimen/height_20"
        android:textColor="@color/color_black_191919"
        android:textSize="@dimen/text_size_24"
        app:expressionAlignType="1"
        app:expressionSize="@dimen/width_28"
        tools:text="@string/default_name" />

</LinearLayout>