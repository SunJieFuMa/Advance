<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/library_category"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_228"
    android:background="@drawable/background_shadow"
    android:elevation="@dimen/height_6">

    <ImageView
        android:id="@+id/library_category_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_228"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/icon_category_hot_default" />

    <TextView
        android:id="@+id/library_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginStart="@dimen/width_32"
        android:layout_marginTop="@dimen/height_32"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_32"
        tools:text="@string/default_name" />

</RelativeLayout>