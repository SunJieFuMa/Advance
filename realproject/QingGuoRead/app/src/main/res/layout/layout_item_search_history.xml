<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/width_32"
    android:layout_marginRight="@dimen/width_32"
    android:paddingBottom="@dimen/height_20"
    android:paddingTop="@dimen/height_20">

    <TextView
        android:id="@+id/search_history_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_gray_929292"
        android:textSize="@dimen/text_size_26"
        tools:text="@string/default_name" />
</RelativeLayout>