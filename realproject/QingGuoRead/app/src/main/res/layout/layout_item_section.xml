<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_216"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/section_serial_number"
        android:layout_width="@dimen/width_110"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="@string/zero"
        android:textColor="@color/color_gray_9b9b9b"
        android:textSize="@dimen/text_size_38" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_toEndOf="@id/section_serial_number"
        android:layout_toRightOf="@id/section_serial_number">

        <TextView
            android:id="@+id/section_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/height_40"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_28"
            tools:text="@string/default_name" />

        <TextView
            android:id="@+id/section_word_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_gray_9b9b9b"
            android:textSize="@dimen/text_size_26"
            tools:text="@string/default_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/height_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/section_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_7"
                android:layout_marginRight="@dimen/width_7"
                android:textColor="@color/color_gray_9b9b9b"
                android:textSize="@dimen/text_size_26"
                tools:text="@string/default_name" />

            <TextView
                android:id="@+id/section_publish_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_18"
                android:layout_marginRight="@dimen/width_18"
                android:textColor="@color/color_gray_9b9b9b"
                android:textSize="@dimen/text_size_26"
                tools:text="@string/default_name" />

            <TextView
                android:id="@+id/section_audit_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_26"
                tools:text="@string/default_name" />
        </LinearLayout>
    </RelativeLayout>

    <include
        layout="@layout/layout_view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true" />
</RelativeLayout>