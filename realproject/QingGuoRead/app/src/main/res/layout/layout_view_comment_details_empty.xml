<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_details_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <TextView
        android:id="@+id/comment_details_empty_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/comment_details_empty_prompt"
        android:textColor="@color/color_gray_6e6e6e"
        android:textSize="@dimen/text_size_28" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/comment_details_empty_prompt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/height_24"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_comment_details_empty" />

</RelativeLayout>