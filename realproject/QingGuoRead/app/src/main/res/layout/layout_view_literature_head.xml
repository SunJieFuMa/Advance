<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_98"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/literature_head_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/width_12"
        android:layout_marginRight="@dimen/width_12"
        android:contentDescription="@string/app_name"
        android:paddingLeft="@dimen/width_20"
        android:paddingRight="@dimen/width_20"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/literature_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/color_black_191919"
        android:textSize="@dimen/text_size_38"
        android:textStyle="bold"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/literature_head_create"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/width_12"
        android:layout_marginRight="@dimen/width_12"
        android:drawableEnd="@drawable/icon_add"
        android:drawablePadding="@dimen/width_6"
        android:drawableRight="@drawable/icon_add"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/width_20"
        android:paddingRight="@dimen/width_20"
        android:text="@string/create_literature_section"
        android:textColor="@color/theme_primary"
        android:textSize="@dimen/text_size_34" />

    <include
        layout="@layout/layout_view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true" />
</RelativeLayout>