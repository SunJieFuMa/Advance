<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_66000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/read_catalog_bookmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/width_68"
        android:layout_marginLeft="@dimen/width_0"
        android:layout_marginRight="@dimen/width_68"
        android:layout_marginStart="@dimen/width_0"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reading_catalog_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_88"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reading_catalog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/catalog"
                android:textColor="@color/selector_light_head_text"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/reading_bookmark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/bookmark"
                android:textColor="@color/selector_light_head_text"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <include
            android:id="@+id/reading_catalog_divider"
            layout="@layout/layout_view_communal_divider" />

        <FrameLayout
            android:id="@+id/reading_catalog_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white" />
    </LinearLayout>
</LinearLayout>