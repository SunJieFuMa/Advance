<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmark_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_light_view_holder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_32"
        android:layout_marginBottom="@dimen/height_30"
        android:orientation="horizontal">

        <View
            android:id="@+id/bookmark_vertical"
            android:layout_width="@dimen/width_2"
            android:layout_height="@dimen/height_32"
            android:layout_marginLeft="@dimen/width_32"
            android:layout_marginStart="@dimen/width_32"
            android:layout_gravity="center_vertical"
            android:background="@color/color_blue_0094d5" />

        <TextView
            android:id="@+id/bookmark_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_32"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginRight="@dimen/width_32"
            android:layout_marginStart="@dimen/width_24"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black_444444"
            android:textSize="@dimen/text_size_32"
            tools:text="@string/default_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/bookmark_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/line_spacing_extra_4"
        android:maxLines="3"
        android:textColor="@color/color_black_3e3e3e"
        android:textSize="@dimen/text_size_28"
        tools:text="@string/app_name"
        android:layout_marginBottom="@dimen/height_30"/>

    <include
        android:id="@+id/bookmark_divider"
        layout="@layout/layout_view_communal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"/>
</LinearLayout>