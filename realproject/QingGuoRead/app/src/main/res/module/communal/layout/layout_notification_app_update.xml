<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_20"
        android:layout_marginLeft="@dimen/width_28"
        android:layout_marginRight="@dimen/width_20"
        android:layout_marginStart="@dimen/width_28"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_notification" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/notification_icon"
        android:layout_marginEnd="@dimen/width_28"
        android:layout_marginRight="@dimen/width_28"
        android:layout_toEndOf="@id/notification_icon"
        android:layout_toRightOf="@id/notification_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_black_444444"
        android:textSize="@dimen/text_size_26"
        tools:text="@string/default_name" />

    <TextView
        android:id="@+id/notification_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/notification_icon"
        android:layout_marginEnd="@dimen/width_28"
        android:layout_marginRight="@dimen/width_28"
        android:layout_toEndOf="@id/notification_icon"
        android:layout_toRightOf="@id/notification_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_gray_9b9b9b"
        android:textSize="@dimen/text_size_22"
        tools:text="@string/default_message" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/notification_icon"
        android:layout_marginEnd="@dimen/width_28"
        android:layout_marginLeft="@dimen/width_10"
        android:layout_marginRight="@dimen/width_28"
        android:layout_marginStart="@dimen/width_10"
        android:maxLines="1"
        android:textColor="@color/color_black_191919"
        android:textSize="@dimen/text_size_22" />
</RelativeLayout>