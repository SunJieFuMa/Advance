<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_690"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_224"
        android:layout_marginBottom="@dimen/height_16"
        android:background="@drawable/background_shelf_more"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/width_5"
        android:paddingRight="@dimen/width_5">

        <RelativeLayout
            android:id="@+id/option_wifi_transport"
            android:layout_width="@dimen/width_120"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width_25"
            android:layout_marginRight="@dimen/width_25">

            <ImageView
                android:layout_width="@dimen/width_120"
                android:layout_height="@dimen/height_120"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/height_28"
                android:contentDescription="@string/app_name"
                android:src="@drawable/selector_wifi_transport" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/height_28"
                android:text="@string/wifi_transport"
                android:textColor="@color/color_black_030303"
                android:textSize="@dimen/text_size_24" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/option_import_local"
            android:layout_width="@dimen/width_120"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width_25"
            android:layout_marginRight="@dimen/width_25">

            <ImageView
                android:layout_width="@dimen/width_120"
                android:layout_height="@dimen/height_120"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/height_28"
                android:contentDescription="@string/app_name"
                android:src="@drawable/selector_import_local" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/height_28"
                android:text="@string/import_local"
                android:textColor="@color/color_black_030303"
                android:textSize="@dimen/text_size_24" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/option_download_manager"
            android:layout_width="@dimen/width_120"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width_25"
            android:layout_marginRight="@dimen/width_25">

            <ImageView
                android:layout_width="@dimen/width_120"
                android:layout_height="@dimen/height_120"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/height_28"
                android:contentDescription="@string/app_name"
                android:src="@drawable/selector_download_manager" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/height_28"
                android:text="@string/download_manager"
                android:textColor="@color/color_black_030303"
                android:textSize="@dimen/text_size_24" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/option_display_mode"
            android:layout_width="@dimen/width_120"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width_25"
            android:layout_marginRight="@dimen/width_25">

            <ImageView
                android:id="@+id/option_display_mode_flag"
                android:layout_width="@dimen/width_120"
                android:layout_height="@dimen/height_120"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/height_28"
                android:contentDescription="@string/app_name"
                android:src="@drawable/selector_display_grid" />

            <TextView
                android:id="@+id/option_display_mode_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/height_28"
                android:textColor="@color/color_black_030303"
                android:textSize="@dimen/text_size_24"
                tools:text="@string/shelf_grid_prompt" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/option_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_98"
        android:layout_marginBottom="@dimen/height_16"
        android:background="@drawable/background_shelf_more_cancel"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_gray_686868"
        android:textSize="@dimen/text_size_34" />
</LinearLayout>