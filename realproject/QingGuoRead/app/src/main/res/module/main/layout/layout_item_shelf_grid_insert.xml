<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shelf_insert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_16"
    android:paddingTop="@dimen/height_16">

    <ImageView
        android:id="@+id/shelf_insert_prompt"
        android:layout_width="@dimen/width_164"
        android:layout_height="@dimen/height_230"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_fill"
        android:contentDescription="@string/app_name"
        android:elevation="@dimen/height_6"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/icon_shelf_grid_insert" />

    <TextView
        android:layout_width="@dimen/width_164"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/height_20"
        android:ellipsize="middle"
        android:lineSpacingExtra="@dimen/line_spacing_extra_4"
        android:maxLines="2"
        android:textColor="@color/color_black_191919"
        android:textSize="@dimen/text_size_24"
        tools:text="@string/default_name" />

    <TextView
        android:layout_width="@dimen/width_164"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/height_14"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_gray_686868"
        android:textSize="@dimen/text_size_24"
        tools:text="@string/default_name" />
</LinearLayout>