<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shelf_slide_detail_local"
    android:layout_width="@dimen/width_720"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/width_330"
        android:layout_height="@dimen/height_310"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_shelf_slide_local" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_20"
        android:text="@string/prompt_shelf_local"
        android:textColor="@color/color_gray_787878"
        android:textSize="@dimen/text_size_28" />
</LinearLayout>