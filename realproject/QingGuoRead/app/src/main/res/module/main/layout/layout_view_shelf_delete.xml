<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_98"
    android:background="@color/color_white_f9f9f9"
    android:orientation="vertical">

    <include layout="@layout/layout_view_communal_divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width_32"
            android:layout_height="@dimen/height_32"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/width_12"
            android:layout_marginRight="@dimen/width_12"
            android:src="@drawable/icon_shelf_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/theme_primary"
            android:textSize="@dimen/text_size_34" />
    </LinearLayout>
</LinearLayout>