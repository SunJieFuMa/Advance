<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_shelf_empty" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_56"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_40"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/prompt_insert_bookshelf"
        android:textColor="@color/color_blue_8fabb7"
        android:textSize="@dimen/text_size_28" />

    <ImageView
        android:id="@+id/shelf_empty_insert"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_574"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_shelf_empty_insert" />
</LinearLayout>