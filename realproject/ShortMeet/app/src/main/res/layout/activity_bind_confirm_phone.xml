<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_confirm_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.shortmeet.www.ui.PercenalCenter.activity.BindConfirmPhoneActivity">
   <TextView
       android:textSize="12sp"
       android:textColor="@color/black_5"
       android:paddingLeft="25dp"
       android:text="绑定手机后，可使用手机和密码登录哦~"
       android:layout_marginTop="38dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/shape_regist_activity_pwd"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:layout_height="49dp">

        <EditText
            android:id="@+id/edt_pwd_bindconfirmpage"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/black_3"
            android:textColorHint="@color/black_5"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:maxLength="15"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:paddingLeft="16dp" />

        <ImageView
            android:id="@+id/imgv_eyechoose_bindconfirmpage"
            android:src="@mipmap/yan_close_regist"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="5dp"
            android:layout_width="21dp"
            android:layout_height="21dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_instantbind_bindconfirmpage"
        android:text="立即绑定"
        android:textColor="@drawable/selector_loginactivity_btcolor"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/selector_loginactivity_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</LinearLayout>
