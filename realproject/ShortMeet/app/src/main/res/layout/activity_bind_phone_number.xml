<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_phone_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.shortmeet.www.ui.PercenalCenter.activity.BindPhoneNumberActivity">
    <LinearLayout
        android:layout_marginTop="58dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="49dp">
        <TextView
            android:background="@drawable/shape_regist_activity_jia86"
            android:layout_width="56dp"
            android:text="+86"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edt_phone_bindphonepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_regist_activity_phone"
            android:textColor="@color/black_3"
            android:textSize="14sp"
            android:textColorHint="@color/black_5"
            android:hint="请输入11位手机号码"
            android:maxLength="11"
            android:textCursorDrawable="@null"
            android:inputType="phone"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        android:layout_height="49dp">
        <EditText
            android:id="@+id/edt_duanxincode_bindphonepage"
            android:layout_weight="1.02"
            android:background="@drawable/shape_regist_activity_yzm"
            android:textColor="@color/black_3"
            android:textColorHint="@color/black_5"
            android:textSize="14sp"
            android:maxLength="6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入短信验证码"
            android:textCursorDrawable="@null"
            android:paddingLeft="16dp" />
        <TextView
            android:id="@+id/tv_getverfy_bindphonepage"
            android:textColor="@color/getverify"
            android:text="获取验证码"
            android:background="@drawable/shape_regist_activity_btgetyzm"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="106dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_next_bindphonepage"
        android:text="下一步"
        android:textColor="@drawable/selector_loginactivity_btcolor"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/selector_loginactivity_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</LinearLayout>
