<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrolview_login"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.shortmeet.www.ui.PercenalCenter.activity.LoginActivity">
        <com.shortmeet.www.views.widgetPart.RatioImageView
            android:id="@+id/imgv_head_login"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/head_regist"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="60dp"
            android:layout_width="62dp"
            android:layout_height="62dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="49dp">
            <TextView
                android:layout_width="56dp"
                android:text="+86"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/shape_regist_activity_jia86"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/edt_login_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_regist_activity_phone"
                android:textColor="@color/black_3"
                android:textSize="14sp"
                android:textColorHint="@color/black_5"
                android:hint="请输入手机号码"
                android:textCursorDrawable="@null"
                android:inputType="phone"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/shape_regist_activity_pwd"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="17dp"
            android:layout_height="49dp">

            <EditText
                android:id="@+id/edt_login_pwd"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/black_3"
                android:textColorHint="@color/black_5"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入密码"
                android:maxLength="15"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:paddingLeft="16dp" />

            <ImageView
                android:id="@+id/imgv_eyechoose_login"
                android:src="@mipmap/yan_close_regist"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="5dp"
                android:layout_width="21dp"
                android:layout_height="21dp"/>
        </LinearLayout>
        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login"
            android:background="@drawable/selector_loginactivity_bt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:text="登录"
            android:gravity="center"
            android:textColor="@drawable/selector_loginactivity_btcolor"
            android:layout_height="49dp"/>
            <com.cunoraz.gifview.library.GifView
                android:id="@+id/gif_three_point_login"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:visibility="gone"
                custom:gif="@drawable/threepoint" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_forgotpwd_loginfrag"
                android:text="忘记密码？"
                android:textColor="@color/black_3"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:paddingLeft="35dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_goregist_loginfrag"
                android:text="立即注册"
                android:textSize="12sp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:paddingRight="35dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
      <View
          android:layout_gravity="center_vertical"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="1dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/black_5"
                android:text="第三方登录"
                android:layout_gravity="center_vertical"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgv_weixin_login"
                android:src="@mipmap/weixin_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="36dp"/>

            <ImageView
                android:id="@+id/imgv_qq_login"
                android:src="@mipmap/qq_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="36dp"/>
            <ImageView
                android:id="@+id/imgv_weibologin"
                android:src="@mipmap/weibo_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="36dp"/>
        </LinearLayout>
</LinearLayout>
