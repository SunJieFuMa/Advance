<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_upload"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shortmeet.www.ui.TakePai.MyUploadActivity">
   <RelativeLayout
       android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.shortmeet.www.views.widgetPart.RatioImageView
        android:id="@+id/imgv_fengmian_upload_actity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/p3"
        app:base_width="true"
        app:height_width_ratio="3:4"/>

     <FrameLayout
       android:layout_marginTop="8dp"
       android:id="@+id/frame_title_upload_actity"
       android:layout_width="match_parent"
       android:background="@color/transparent"
       android:layout_height="48dp"
       android:orientation="horizontal">
     <FrameLayout
     android:visibility="visible"
     android:id="@+id/frame_leftback_upload_actity"
     android:layout_width="wrap_content"
     android:layout_height="match_parent">
    <ImageView
      android:id="@+id/imgv_leftback_upload_actity"
      android:visibility="visible"
      android:layout_width="15dp"
      android:layout_height="18dp"
      android:layout_centerVertical="true"
      android:layout_gravity="center"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:src="@mipmap/arrow_left" />
      </FrameLayout>
       <TextView
       android:id="@+id/tv_centertitle_upload_actity"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:gravity="center"
       android:layout_gravity="center_horizontal"
       android:text="发布"
       android:textColor="@color/white"
       android:textSize="18sp" />
      <LinearLayout
          android:layout_gravity="right|center_vertical"
          android:layout_marginRight="5dp"
          android:padding="10dp"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@mipmap/draft_upload"
              android:layout_gravity="center_vertical"
              android:layout_marginRight="5dp"
              android:layout_width="15dp"
              android:layout_height="15dp"/>
          <TextView
              android:id="@+id/tv_save_drafts_upload"
              android:textColor="@color/white"
              android:text="存草稿"
              android:textSize="16sp"
              android:gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
      </LinearLayout>
      </FrameLayout>
       <LinearLayout
           android:layout_marginBottom="13dp"
           android:layout_marginRight="15dp"
           android:layout_alignParentRight="true"
           android:layout_alignBottom="@+id/imgv_fengmian_upload_actity"
           android:background="@drawable/shape_edit_fengmian_perfectuserinfo_d"
           android:orientation="horizontal"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:paddingRight="8dp"
           android:paddingLeft="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <ImageView
           android:src="@mipmap/edit_fm_upload"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="5dp"
           android:layout_width="15dp"
           android:layout_height="15dp"/>
       <TextView
           android:id="@+id/tv_edit_fengmian_upload_actity"
           android:text="编辑封面"
           android:gravity="center_vertical"
           android:textSize="14sp"
           android:textColor="@color/white"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       </LinearLayout>
     </RelativeLayout>

     <LinearLayout
         android:id="@+id/ll_two"
         android:paddingTop="30dp"
         android:layout_width="match_parent"
         android:layout_height="83dp"
         android:layout_below="@id/rl_one">
        <TextView
         android:layout_marginLeft="15dp"
         android:layout_marginRight="10dp"
         android:textColor="@color/black_5"
         android:textSize="14sp"
         android:gravity="top"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:text="标题" />
       <EditText
          android:id="@+id/edt_title_upload_actity"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginRight="15dp"
          android:background="@color/white"
          android:hint="请输入标题"
          android:gravity="top"
          android:paddingTop="1dp"
          android:textColor="@color/black_3"
          android:textColorHint="@color/black_5"
          android:textCursorDrawable="@null"
          android:textSize="12sp" />
     </LinearLayout>
   <View
       android:id="@+id/view_line"
       android:layout_below="@id/ll_two"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="15dp"
       android:background="@color/bg_divider"
       android:layout_width="match_parent"
       android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="107dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_tagbackground_activity_upload"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_height="28dp">
           <TextView
               android:id="@+id/tv_addactivity_tag"
               android:text="#添加活动我的天恶男"
               android:gravity="center_vertical"
               android:padding="5dp"
               android:textSize="11sp"
               android:maxEms="10"
               android:textColor="@color/black_3"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/imgv_tag_delete_uploadactivty"
                android:padding="10dp"
                android:src="@mipmap/tag_delete"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="28dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_whereyou_uploadactivity"
            android:background="@drawable/shape_tagbackground_activity_upload"
            android:textColor="@color/black_3"
            android:textSize="11sp"
            android:text="你在哪里？"
            android:padding="5dp"
            android:maxEms="10"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/position_tag"
            android:layout_width="wrap_content"
            android:layout_height="28dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_line_two"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/bg_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_three"
        />
    <LinearLayout
        android:id="@+id/ll_four"
        android:orientation="horizontal"
        android:paddingLeft="115dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line_two"
        >
        <FrameLayout
            android:id="@+id/frame_weixin_uploadactivity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
          <ImageView
           android:id="@+id/imgv_weixin_uploadactivity"
           android:src="@mipmap/weixin_n_upload"
           android:layout_gravity="center"
           android:layout_width="25dp"
           android:layout_height="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_friends_uploadactivity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgv_friends_uploadactivity"
                android:src="@mipmap/friends_n_upload"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_qq_uploadactivity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgv_qq_uploadactivity"
                android:src="@mipmap/qq_n_upload"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_space_uploadactivity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgv_space_upload"
                android:src="@mipmap/space_n_upload"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_weibo_uploadactivity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgv_weibo_upload"
                android:src="@mipmap/weibo_n_upload"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="20dp"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line_three"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_below="@id/ll_four"
        />
    <TextView
        android:id="@+id/tv_send_uploadactivity"
        android:background="@drawable/selector_send_uploadactivity"
        android:layout_width="match_parent"
        android:text="发送"
        android:gravity="center"
        android:textColor="@drawable/selector_loginactivity_btcolor"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        />

    <ProgressBar
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
