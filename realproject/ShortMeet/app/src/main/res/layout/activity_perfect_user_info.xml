<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_perfect_userinfo_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.shortmeet.www.ui.PercenalCenter.activity.PerfectUserInfoActivity">

  <LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.shortmeet.www.views.widgetPart.RatioImageView
        android:id="@+id/imgv_top_perfect_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ass"
        app:base_width="true"
        app:height_width_ratio="3:4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <FrameLayout
      android:layout_marginTop="8dp"
      android:id="@+id/frame_title_perfect_userinfo"
      android:layout_width="match_parent"
      android:background="@color/transparent"
      android:layout_height="48dp"
      android:orientation="horizontal">
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/frame_leftback_perfect_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
      <ImageView
          android:id="@+id/imgv_leftback_perfect_userinfo"
          android:visibility="visible"
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:layout_centerVertical="true"
          android:layout_gravity="center"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="15dp"
          android:src="@mipmap/arrow_left" />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_centertitle_perfect_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="完善个人资料"
        android:textColor="@color/white"
        android:textSize="18sp" />
  </FrameLayout>
  <TextView
      android:id="@+id/tv_edit_fengmian"
      android:text="编辑封面"
      android:layout_marginBottom="21dp"
      android:layout_marginRight="15dp"
      android:layout_alignParentRight="true"
      android:layout_alignBottom="@+id/imgv_top_perfect_userinfo"
      android:gravity="center"
      android:textSize="16sp"
      android:textColor="@color/white"
      android:layout_width="99dp"
      android:clickable="true"
      android:background="@drawable/shape_edit_fengmian_perfectuserinfo_d"
      android:layout_height="27dp"/>
  </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:layout_marginLeft="15dp"
          android:layout_marginRight="50dp"
          android:textColor="@color/black_3"
          android:textSize="14sp"
         android:layout_gravity="center_vertical"
          android:gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="昵称" />

      <EditText
          android:id="@+id/edt_nickname_perfectuserinfo"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginRight="15dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:hint="昵称支持汉字、字母、数字"
          android:singleLine="true"
          android:maxLength="40"
          android:textColor="@color/black_3"
          android:textColorHint="@color/black_5"
          android:textCursorDrawable="@null"
          android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/bg_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="80dp">
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/black_3"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别" />

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
     <ImageView
         android:id="@+id/imgv_woman_perfectuserinfo"
         android:src="@mipmap/woman_s"
         android:layout_centerVertical="true"
         android:layout_marginBottom="4dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/tv_woman_perfectuserinfo"
          android:text="女"
          android:textSize="12sp"
          android:textColor="@color/woman_s_color"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/imgv_woman_perfectuserinfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
      <ImageView
          android:id="@+id/imgv_man_perfectuserinfo"
          android:src="@mipmap/man_n"
          android:layout_marginBottom="4dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"/>
      <TextView
          android:id="@+id/tv_man_perfectuserinfo"
          android:text="男"
          android:textSize="12sp"
          android:textColor="@color/man_n_color"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/imgv_man_perfectuserinfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </RelativeLayout>
  </LinearLayout>
    <View
        android:background="@color/bg_divider"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


    <LinearLayout
      android:id="@+id/linear_zone_perfectuserinfo"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="50dp">
      <TextView
      android:layout_marginLeft="15dp"
      android:layout_marginRight="36dp"
      android:textColor="@color/black_3"
      android:textSize="14sp"
      android:layout_gravity="center_vertical"
      android:gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="所在地" />
      <TextView
          android:id="@+id/tv_zone"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textColor="@color/black_3"
          android:textSize="14sp"
          android:layout_gravity="center_vertical"
          android:gravity="center_vertical"
          android:text="北京" />

      <ImageView
          android:id="@+id/imgv_zone_arrowright"
          android:layout_gravity="center_vertical"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="17dp"
          android:src="@mipmap/arrow_right" />
    </LinearLayout>
    <View
        android:background="@color/bg_divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="95dp"
      android:visibility="invisible"
      android:background="@color/white"
      android:orientation="horizontal"
      android:paddingBottom="10dp"
      android:paddingTop="18dp">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">
    <TextView
        android:layout_marginLeft="15dp"
        android:textColor="@color/black_3"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个性签名" />
  </LinearLayout>
  <EditText
      android:id="@+id/edt_selfsign_perfectuserinfo"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="17dp"
      android:background="@color/white"
      android:gravity="top"
      android:hint="疯一下，狂一下，如此而已"
      android:inputType="textMultiLine"
      android:maxLength="600"
      android:scrollbars="none"
      android:textColor="@color/black_2"
      android:textColorHint="@color/black_5"
      android:textCursorDrawable="@null"
      android:textSize="13sp" />
</LinearLayout>
   <TextView
       android:id="@+id/tv_instantTy_perfectuserinfo"
       android:text="立即体验"
       android:clickable="true"
       android:gravity="center"
       android:textColor="@color/black_3"
       android:textSize="14sp"
       android:background="@color/black7"
       android:layout_width="match_parent"
       android:layout_height="45dp"/>
</LinearLayout>
</ScrollView>
