<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview_regist"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shortmeet.www.ui.PercenalCenter.activity.RegistActivity">
 <LinearLayout
     android:focusable="true"
     android:focusableInTouchMode="true"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <com.shortmeet.www.views.widgetPart.RatioImageView
         android:id="@+id/imgv_head_regist"
         android:layout_gravity="center_horizontal"
         android:src="@mipmap/head_regist"
         android:layout_marginBottom="50dp"
         android:layout_marginTop="60dp"
         android:layout_width="62dp"
         android:layout_height="62dp"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_height="49dp">
      <TextView
          android:background="@drawable/shape_regist_activity_jia86"
          android:layout_width="56dp"
          android:text="+86"
          android:gravity="center"
          android:textSize="14sp"
          android:layout_height="match_parent"/>
        <EditText
             android:id="@+id/edt_register_phone"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:background="@drawable/shape_regist_activity_phone"
             android:textSize="14sp"
             android:hint="请输入11位手机号码"
             android:maxLength="11"
             android:textColorHint="@color/black_5"
             android:textColor="@color/black_3"
             android:textCursorDrawable="@null"
             android:inputType="phone"
             android:paddingLeft="10dp" />
     </LinearLayout>

     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:background="@drawable/shape_regist_activity_pwd"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_marginTop="17dp"
         android:layout_height="49dp">
         <EditText
             android:id="@+id/edt_register_pwd"
             android:layout_weight="1"
             android:textColor="@color/black_3"
             android:textColorHint="@color/black_5"
             android:textSize="14sp"
             android:maxLength="15"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:hint="密码（6-15位数字、字母）"
             android:inputType="textPassword"
             android:textCursorDrawable="@null"
             android:background="@null"
             android:paddingLeft="16dp" />

         <ImageView
             android:id="@+id/imgv_eye_regist"
             android:src="@mipmap/yan_close_regist"
             android:layout_gravity="center_vertical"
             android:layout_marginRight="17dp"
             android:layout_marginLeft="5dp"
             android:layout_width="21dp"
             android:layout_height="21dp"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_marginTop="17dp"
         android:layout_height="49dp">
         <EditText
             android:id="@+id/edt_duanxincode_regist"
             android:layout_weight="1.02"
             android:background="@drawable/shape_regist_activity_yzm"
             android:textColor="@color/black_3"
             android:textColorHint="@color/black_5"
             android:textSize="14sp"
             android:maxLength="6"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:hint="请输入短信验证码"
             android:textCursorDrawable="@null"
             android:paddingLeft="16dp" />
         <TextView
             android:id="@+id/tv_getverfy_regist"
             android:textColor="@color/getverify"
             android:text="获取验证码"
             android:background="@drawable/shape_regist_activity_btgetyzm"
             android:gravity="center"
             android:textSize="14sp"
             android:layout_width="106dp"
             android:layout_height="match_parent"/>
     </LinearLayout>
     <FrameLayout
         android:layout_marginTop="15dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_regist"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_width="match_parent"
          android:clickable="true"
          android:text="注册"
          android:textColor="@drawable/selector_loginactivity_btcolor"
          android:gravity="center"
          android:background="@drawable/selector_loginactivity_bt"
          android:layout_height="49dp"/>
         <com.cunoraz.gifview.library.GifView
             android:id="@+id/gif_three_point_reg"
             android:layout_marginLeft="30dp"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="18dp"
             android:visibility="gone"
             custom:gif="@drawable/threepoint" />
     </FrameLayout>

     <TextView
         android:id="@+id/tv_gologin"
         android:text="已有账号？去登录"
         android:textSize="12sp"
         android:paddingTop="12dp"
         android:paddingBottom="10dp"
         android:paddingRight="35dp"
         android:layout_gravity="right"
         android:textColor="@color/black_3"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"/>
     <LinearLayout
         android:orientation="horizontal"
         android:layout_marginTop="90dp"
         android:layout_width="180dp"
         android:layout_gravity="center_horizontal"
         android:layout_height="wrap_content">
         <CheckBox
             android:id="@+id/cb_agreexieyi"
             android:button="@null"
             android:layout_marginRight="12dp"
             android:background="@drawable/selector_regist_useragreement"
             android:layout_width="17dp"
             android:layout_height="17dp"/>
         <TextView
             android:text="我同意《茄子视频用户协议》"
             android:textSize="11sp"
              android:gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
     </LinearLayout>
 </LinearLayout>
</ScrollView>
