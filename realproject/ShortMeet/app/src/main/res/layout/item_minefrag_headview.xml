<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.shortmeet.www.views.widgetPart.RatioImageView
            android:id="@+id/imgv_head_mine_frg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/p4"
            app:base_width="true"
            app:height_width_ratio="3:4" />
        <LinearLayout
            android:layout_alignBottom="@+id/imgv_head_mine_frg"
            android:layout_width="match_parent"
            android:background="@mipmap/shadow_lower"
            android:layout_height="match_parent">
        </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:id="@+id/linear_bottom_minefrag"
           android:layout_alignBottom="@+id/imgv_head_mine_frg"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_care_minefrag"
               android:textColor="@color/white"
               android:textSize="14sp"
               android:text="关注"
               android:gravity="bottom"
               android:paddingRight="10dp"
               android:paddingLeft="15dp"
               android:paddingBottom="12dp"
               android:paddingTop="8dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tv_carecount_minefrag"
               android:layout_width="wrap_content"
               android:gravity="bottom"
               android:textColor="@color/white"
               android:text="20"
               android:paddingBottom="12dp"
               android:textSize="18sp"
               android:paddingTop="8dp"
               android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_fans_minefrag"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="粉丝"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="15dp"
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tv_fanscount"
               android:gravity="bottom"
               android:textSize="18sp"
               android:text="0"
               android:paddingBottom="12dp"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
        <TextView
            android:id="@+id/tv_signature_minefrg"
            android:layout_above="@+id/linear_bottom_minefrag"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:text="初来乍到，多多关照，呵呵"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nickname_minefrg"
            android:layout_above="@+id/tv_signature_minefrg"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:text="悲伤逆流成河"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/tv_userid_minefrg"
              android:layout_alignBottom="@+id/tv_nickname_minefrg"
              android:layout_toRightOf="@+id/tv_nickname_minefrg"
              android:textSize="9sp"
              android:layout_marginLeft="11dp"
              android:textColor="@color/white"
              android:text="ID:1234567890"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_edit_info"
            android:layout_alignBottom="@+id/imgv_head_mine_frg"
            android:layout_marginBottom="12dp"
            android:layout_alignParentRight="true"
            android:text="编辑资料"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_edit_fengmian_perfectuserinfo_d"
            android:layout_width="99dp"
            android:layout_height="27dp"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/linear_getzan_minefrag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgv_zan_mine_frg"
                android:src="@mipmap/zan_n_minefrag"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/view_zanredpoint_minefrag"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|right"
                android:background="@drawable/shape_redpoint_minefrag"
                android:gravity="center"
                android:text="23"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="18dp"
                android:textColor="@color/white"
                android:textSize="6dp"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_zan_mine_frg"
            android:layout_marginLeft="5dp"
            android:text="获赞"
            android:textSize="16sp"
            android:textColor="@color/black_3"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_commen_minefrag"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
          <FrameLayout
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <ImageView
              android:id="@+id/imgv_commen_mine_frg"
              android:src="@mipmap/commen_minefrag"
              android:layout_gravity="center"
              android:layout_width="25dp"
              android:layout_height="25dp"/>
          <TextView
              android:id="@+id/view_commenredpoint_minefrag"
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:layout_gravity="top|right"
              android:layout_marginLeft="18dp"
              android:layout_marginBottom="18dp"
              android:background="@drawable/shape_redpoint_minefrag"
              android:gravity="center"
              android:text="23"
              android:textColor="@color/white"
              android:textSize="6dp"/>
      </FrameLayout>
          <TextView
              android:id="@+id/tv_commen_mine_frg"
              android:layout_marginLeft="5dp"
              android:text="评论"
              android:textSize="16sp"
              android:textColor="@color/black_3"
              android:layout_gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_message_minefrag"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgv_message_mine_frg"
                android:src="@mipmap/meaasge_minefrag"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/view_messageredpoint_minefrag"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|right"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/shape_redpoint_minefrag"
                android:gravity="center"
                android:text="23"
                android:textColor="@color/white"
                android:textSize="6dp"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_message_mine_frg"
            android:layout_marginLeft="5dp"
            android:text="私信"
            android:textSize="16sp"
            android:textColor="@color/black_3"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/bg_divider"
         android:layout_width="match_parent"
         android:layout_height="5dp"/>
    
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relav_mywork_mine_frag"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/liear_mywork_mine_frag"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tv_work_minefrag"
              android:text="作品"
              android:layout_marginRight="5dp"
              android:textSize="16sp"
              android:textColor="@color/black_3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/tv_myworkcount_minefrag"
              android:text="9"
              android:textColor="@color/black_3"
              android:textSize="16sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/view_myworkline_minefrag"
            android:background="@drawable/shape_guideline_mywork_minefrag"
            android:layout_below="@+id/liear_mywork_mine_frag"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="11dp"
            android:layout_height="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relav_zanwork_mine_frag"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/liear_zanwork_mine_frag"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_zanwork_minefrag"
                    android:text="点赞"
                    android:layout_marginRight="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_zanworkcount_minefrag"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="@color/black_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:visibility="gone"
                android:id="@+id/view_zanline_minefrag"
                android:background="@drawable/shape_guideline_mywork_minefrag"
                android:layout_below="@+id/liear_zanwork_mine_frag"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="11dp"
                android:layout_height="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relav_draftwork_mine_frag"
            android:paddingTop="20dp"
            android:layout_marginLeft="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/liear_draftwork_mine_frag"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_draftwork_minefrag"
                    android:text="草稿"
                    android:layout_marginRight="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_draftworkcount_minefrag"
                    android:text="5"
                    android:textSize="16sp"
                    android:textColor="@color/black_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:visibility="gone"
                android:id="@+id/view_draftline_minefrag"
                android:background="@drawable/shape_guideline_mywork_minefrag"
                android:layout_below="@+id/liear_draftwork_mine_frag"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="11dp"
                android:layout_height="3dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>