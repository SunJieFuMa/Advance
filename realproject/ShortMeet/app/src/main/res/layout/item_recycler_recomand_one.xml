<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              app:cardCornerRadius="4dp"
              app:cardElevation="0dp"
              android:layout_marginLeft="6dp"
              android:layout_marginRight="6dp"
              android:layout_marginTop="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.shortmeet.www.views.widgetPart.GoodManVideoPlayerPriview
            android:id="@+id/videoplayer_item_recommend_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.shortmeet.www.views.widgetPart.GoodManVideoPlayerPriview>
        <RelativeLayout
            android:id="@+id/viedo_horizantalfengmian_recommend_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.shortmeet.www.views.widgetPart.RatioImageView
            android:id="@+id/imgv_video_item_recommend_video"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:base_width="true"
            app:height_width_ratio="1:2" />
        <TextView
            android:id="@+id/tv_tag_recomandfrg"
            android:text="喜剧之王"
            android:padding="3dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="63dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_item_tag_recomand"
            android:layout_height="22dp"/>
        <TextView
            android:id="@+id/tv_tile_recomand"
            android:layout_alignBottom="@+id/imgv_video_item_recommend_video"
            android:textColor="@color/white"
            android:text="时光惊艳了你好男友"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linear_head_recomandfrg"
            android:layout_above="@+id/tv_tile_recomand"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:layout_width="80dp"
            android:layout_height="40dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgv_head_recomandfrg"
                android:layout_gravity="center_vertical"
                app:riv_oval="true"
                android:src="@drawable/btn_play_s"
                android:layout_width="22dp"
                android:layout_height="22dp"/>
            <TextView
                android:id="@+id/tv_nickname_recomandfrg"
                android:layout_marginLeft="6dp"
                android:singleLine="true"
                android:text="我的天丫丫"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_width="35dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>