<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
      android:id="@+id/card1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="4dp"
       android:layout_marginBottom="6dp"
      app:cardElevation="0dp"
      app:cardUseCompatPadding="true"
      app:cardPreventCornerOverlap="false" >

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relav1_minefrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <com.shortmeet.www.views.widgetPart.RatioImageView
          android:id="@+id/imgv1_video_minefrag"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="centerCrop"
          app:base_width="true"
          app:height_width_ratio="1:1"
          android:src="@drawable/p1"
          />
   <!--   <com.shortmeet.www.views.widgetPart.RatioImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="centerCrop"
          android:src="@mipmap/shadow_lower"
          app:base_width="true"
          app:height_width_ratio="1:1"/>-->
      <TextView
          android:id="@+id/tv1_tag_minefrag"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingRight="8dp"
          android:paddingLeft="8dp"
          android:paddingTop="6dp"
          android:paddingBottom="6dp"
          android:maxEms="7"
          android:singleLine="true"
          android:text="我的天啊哇哇"
          android:ellipsize="end"
          android:textColor="@color/black"
          android:textSize="12sp"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/imgv1_video_minefrag"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5dp"
          android:layout_marginLeft="7dp"
          android:orientation="horizontal"
          android:layout_alignParentBottom="true"
          android:layout_below="@id/imgv1_video_minefrag"
          android:layout_alignParentRight="true"
          >
        <ImageView
            android:id="@+id/imgv1_zan_minefrg"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/zan_s_minefrag"/>
        <TextView
            android:id="@+id/tv1_zancount_minefrg"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="120"
            android:paddingBottom="1dp"
            android:textColor="@color/care_fans_minefrg"
            android:textSize="12sp"/>
      </LinearLayout>
    </RelativeLayout>
  </android.support.v7.widget.CardView>


