<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/main_bg"
              android:orientation="vertical"
              app:isColorUi="true"
    >
    <RelativeLayout
        android:id="@+id/tool_bar_pub"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#32353F"
        >
        <ImageView
            android:id="@+id/back_myissue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/leftbackicon_white_titlebar_normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_data"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/share_myissue"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="11dp"
            android:background="@drawable/top_navigation_more_white"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#32353F"
        >
        <include layout="@layout/include_head_myissue"></include>
    </LinearLayout>








</LinearLayout>