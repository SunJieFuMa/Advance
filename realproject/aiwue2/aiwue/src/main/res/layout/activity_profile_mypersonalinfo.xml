<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#32353F"
        >
        <ImageView
            android:id="@+id/back_myinfomation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/leftbackicon_white_titlebar_normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_data"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/save_txt_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/save_info"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <com.aiwue.ui.view.HeaderZoomLayout
        android:id="@+id/zommLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#32353F"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_myinfomation"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_portrait"
            />
        <TextView
            android:id="@+id/txt_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/app_notify_title"
            android:textColor="@color/ssxinzi10"
            android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/nickname_txt_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/nickname_info"
                        android:layout_centerVertical="true"
                        android:textColor="@color/bg_update_write_comment_frame_night"
                        android:layout_marginLeft="15dp"
                        />
                    <EditText
                        android:id="@+id/nicknameInput_info"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:hint="@string/app_notify_title"
                        android:textSize="14sp"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textColorHint="@color/god_comment_username"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:layout_toRightOf="@id/nickname_txt_info"
                        />
                    <ImageView
                        android:id="@+id/nickname_img_info"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="4dp"
                        android:src="@mipmap/add_channels_close_small"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
                <include layout="@layout/include_underline"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/sex_txt_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/sex_info"
                        android:layout_centerVertical="true"
                        android:textColor="@color/bg_update_write_comment_frame_night"
                        android:layout_marginLeft="15dp"
                        />
                    <EditText
                        android:id="@+id/sexInput_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:hint="@string/account_item_male"
                        android:textSize="14sp"
                        android:textColorHint="@color/god_comment_username"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/sex_txt_info"
                        />
                </RelativeLayout>
                <include layout="@layout/include_underline"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/mood_txt_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/mood_info"
                        android:layout_centerVertical="true"
                        android:textColor="@color/bg_update_write_comment_frame_night"
                        android:layout_marginLeft="15dp"
                        />
                    <EditText
                        android:id="@+id/moodInput_info"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:hint="@string/category_optimize_tip_ignore"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:textColorHint="@color/god_comment_username"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:layout_toRightOf="@id/mood_txt_info"
                        />
                    <ImageView
                        android:id="@+id/mood_img_info"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="4dp"
                        android:src="@mipmap/add_channels_close_small"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:visibility="invisible"
                        />
                </RelativeLayout>
                <include layout="@layout/include_underline"></include>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/city_txt_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/city_info"
                        android:layout_centerVertical="true"
                        android:textColor="@color/bg_update_write_comment_frame_night"
                        android:layout_marginLeft="15dp"
                        />
                    <EditText
                        android:id="@+id/cityInput_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:hint="北京市 朝阳区"
                        android:textSize="14sp"
                        android:textColorHint="@color/god_comment_username"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/city_txt_info"
                        />
                </RelativeLayout>
                <include layout="@layout/include_underline"></include>
            </LinearLayout>
        </LinearLayout>
    </com.aiwue.ui.view.HeaderZoomLayout>

</LinearLayout>