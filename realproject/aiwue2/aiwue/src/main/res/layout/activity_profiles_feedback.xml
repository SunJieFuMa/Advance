<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#32353F"
        >
        <ImageView
            android:id="@+id/back_myfeedback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/leftbackicon_white_titlebar_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/feedback"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    >
    <EditText
    android:id="@+id/feedInput"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:textSize="16sp"
    android:gravity="top"
    android:background="@drawable/shape_white_myissue"
    />
    <EditText
        android:id="@+id/contactIput"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:hint="请输入您的联系方式QQ/微信/手机"
        android:background="@drawable/shape_white_myissue"

        android:layout_marginTop="15dp"
        />
    <Button
        android:id="@+id/commit_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/submit_feedback"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/shape_savemodify_normal_btn"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        /></LinearLayout>





</LinearLayout>