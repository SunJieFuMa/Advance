<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#32353F"
        >
        <ImageView
            android:id="@+id/back_account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/leftbackicon_white_titlebar_normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/account_security"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            />
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#F7F7F7"
        android:layout_alignParentBottom="true"
        ></LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/id_account"
        android:layout_centerVertical="true"
        android:textColor="@color/bg_update_write_comment_frame_night"
        android:layout_marginLeft="15dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="10540"
            android:layout_centerVertical="true"
            android:textColor="@color/category_hint_text_night"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <include layout="@layout/include_underline"></include>

    <RelativeLayout
        android:id="@+id/resetpassword_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/resetpassword_account"
            android:textColor="@color/bg_update_write_comment_frame_night"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/shezhi_icon_goin" />
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F7F7F7"
        android:layout_alignParentBottom="true"
        ></LinearLayout>

    <RelativeLayout
        android:id="@+id/qq_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:visibility="visible"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qq_account"
            android:textSize="14sp"
            android:textColor="@color/bg_update_write_comment_frame_night"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/qq_img"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/shezhi_icon_goin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/qq_unbound_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unbound_account"
            android:textSize="12sp"
            android:textColor="@color/category_hint_text_night"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/qq_img"
            android:layout_centerVertical="true"
            />
           </RelativeLayout>
    <include layout="@layout/include_underline"></include>
    <RelativeLayout
        android:id="@+id/wechat_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wechat_account"
            android:textSize="14sp"
            android:textColor="@color/bg_update_write_comment_frame_night"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/wechat_img"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/shezhi_icon_goin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/wechat_unbound_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unbound_account"
            android:textSize="12sp"
            android:textColor="@color/category_hint_text_night"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/wechat_img"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <include layout="@layout/include_underline"></include>
    <RelativeLayout
        android:id="@+id/weibo_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weibo_account"
            android:textSize="14sp"
            android:textColor="@color/bg_update_write_comment_frame_night"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/weibo_img"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/shezhi_icon_goin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/weibo_unbound_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unbound_account"
            android:textSize="12sp"
            android:textColor="@color/category_hint_text_night"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/weibo_img"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <include layout="@layout/include_underline"></include>
    <RelativeLayout
        android:id="@+id/phonenuber_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phonenuber_account"
            android:textSize="14sp"
            android:textColor="@color/bg_update_write_comment_frame_night"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/phonenuber_img"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/shezhi_icon_goin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/phonenuber_unbound_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18201189193"
            android:textSize="12sp"
            android:textColor="@color/category_hint_text_night"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/phonenuber_img"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <include layout="@layout/include_underline"></include>
    <RelativeLayout
        android:id="@+id/email_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_account"
            android:textSize="14sp"
            android:textColor="@color/bg_update_write_comment_frame_night"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/email_img"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@drawable/shezhi_icon_goin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/email_accountweibo_unbound_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unbound_account"
            android:textSize="12sp"
            android:textColor="@color/category_hint_text_night"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/email_img"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <include layout="@layout/include_underline"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="@string/tip_account"
        android:textSize="11sp"
        android:textColor="@color/category_hint_text_night"
        />


</LinearLayout>