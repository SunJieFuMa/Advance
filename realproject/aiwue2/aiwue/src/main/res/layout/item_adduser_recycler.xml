<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="6dp"
    >


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_portrait"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/male"
        android:layout_alignRight="@id/img_avatar_item"
        android:layout_alignBottom="@id/img_avatar_item"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textSize="14sp"
        android:layout_alignTop="@id/img_avatar_item"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/img_avatar_item"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mood"
        android:textSize="12sp"
        android:textColor="#696969"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@id/img_avatar_item"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/img_avatar_item"
        android:layout_marginLeft="12dp"
        />
</RelativeLayout>
<RelativeLayout
android:layout_width="0dp"
android:layout_weight="1"
android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="50dp"
    android:layout_height="20dp"
    android:layout_centerInParent="true"
    android:background="@drawable/shape_adduser_recycler_attention">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 关注"
        android:textSize="9sp"
        android:textColor="#3DB357"
        android:layout_centerInParent="true"
        />
</RelativeLayout>

</RelativeLayout>








    </LinearLayout>