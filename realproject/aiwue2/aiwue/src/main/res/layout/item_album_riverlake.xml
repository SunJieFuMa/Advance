<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="article"
            type="com.aiwue.model.Article" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title_album_txt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="标题"
            android:textColor="#000000"
            android:paddingTop="7dp"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <RelativeLayout
            android:id="@+id/pictures_rela"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <ImageView
                android:id="@+id/album_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/defaul_video_bg"
                />
            <TextView
                android:id="@+id/photos_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_video_black"
                android:text="5图"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar_album_item"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/default_portrait"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/author_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/article_type_seal"
                android:text="我是大大王"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_avatar_album_item"
                />
            <LinearLayout
                android:id="@+id/comment_lin_video_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/comment_normal"
                    />
                <TextView
                    android:id="@+id/comment_album_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#AAAAAA"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/praise_album_lin"
                android:layout_toLeftOf="@id/comment_lin_video_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/praise_normal"
                    />
                <TextView
                    android:id="@+id/praise_album_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#AAAAAA"
                    />
            </LinearLayout>
        </RelativeLayout>
        <include layout="@layout/include_underline_1dp"></include>
    </LinearLayout>



</layout>