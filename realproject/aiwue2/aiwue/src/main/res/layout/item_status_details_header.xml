<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar_dynamic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/default_portrait"
                />

            <TextView
                android:id="@+id/nickname_txt_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无病呻吟"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignTop="@id/img_avatar_dynamic"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/img_avatar_dynamic"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3天前"
                android:textSize="12sp"
                android:textColor="#696969"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignBottom="@id/img_avatar_dynamic"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/img_avatar_dynamic"
                android:layout_marginLeft="12dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="这是最厉害的武功，虽然你厉害看不到人，看不清楚头像，但是没关系，你可以的，你很厉害"
            android:textSize="12sp"
            android:textColor="#4A4A4A"
            />
        <include layout="@layout/include_dynamic_details_img"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/phone_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="iphone7"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/comment_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="0"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_normal"
                android:layout_toLeftOf="@id/comment_dynamic"
                />
            <TextView
                android:id="@+id/praise_normal_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toLeftOf="@id/comment_dynamic"
                android:layout_marginRight="55dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/praise_normal"
                android:layout_toLeftOf="@id/praise_normal_dynamic"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E4E4E4"
            ></View>
    </LinearLayout>
    </ScrollView>