<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_98"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/revise_head_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/width_20"
            android:paddingRight="@dimen/width_20"
            android:layout_marginLeft="@dimen/width_12"
            android:layout_marginRight="@dimen/width_12"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/revise_head_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_38"
            android:textStyle="bold"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/revise_head_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_32"
            android:layout_marginEnd="@dimen/width_32"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/theme_primary"
            android:textSize="@dimen/text_size_28"
            tools:text="@string/app_name" />

        <include
            layout="@layout/layout_view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0.5"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/revise_user_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>