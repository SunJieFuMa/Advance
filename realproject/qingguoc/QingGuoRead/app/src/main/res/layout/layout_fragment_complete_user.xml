<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/complete_user_avatar"
        android:layout_width="@dimen/width_116"
        android:layout_height="@dimen/height_116"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/height_40"
        android:layout_marginTop="@dimen/height_40"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_avatar_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_40">

        <EditText
            android:id="@+id/complete_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/input_nickname"
            android:inputType="text"
            android:maxEms="10"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_gray_6e6e6e"
            android:textSize="@dimen/text_size_26" />

        <include
            layout="@layout/layout_view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0.5"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/complete_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88"
        android:layout_marginBottom="@dimen/height_40"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_40"
        android:background="@drawable/background_login_text"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_34" />

    <TextView
        android:id="@+id/complete_user_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:textSize="@dimen/text_size_28" />

</LinearLayout>