<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_information"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_358">

    <RelativeLayout
        android:id="@+id/main_vertical_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_58"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/width_20"
        android:layout_marginRight="@dimen/width_20"
        android:layout_marginTop="@dimen/height_22"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/width_12"
        android:paddingRight="@dimen/width_12">

        <ImageView
            android:id="@+id/book_information_avatar"
            android:layout_width="@dimen/width_38"
            android:layout_height="@dimen/height_38"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_avatar"
            android:contentDescription="@string/app_name"
            android:elevation="@dimen/height_2"
            android:src="@drawable/icon_avatar_default" />

        <TextView
            android:id="@+id/book_information_author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width_24"
            android:layout_marginStart="@dimen/width_24"
            android:layout_toEndOf="@id/book_information_avatar"
            android:layout_toRightOf="@id/book_information_avatar"
            android:gravity="center_vertical"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_28"
            tools:text="@string/default_name" />

        <ImageView
            android:id="@+id/book_information_more"
            android:layout_width="@dimen/width_38"
            android:layout_height="@dimen/height_38"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/selector_more" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/book_information_cover"
        android:layout_width="@dimen/width_166"
        android:layout_height="@dimen/height_232"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_86"
        android:background="@drawable/background_shadow"
        android:elevation="@dimen/height_10"
        android:scaleType="fitXY"
        android:src="@drawable/icon_cover_default" />

    <TextView
        android:id="@+id/book_information_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_vertical_information"
        android:layout_marginEnd="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_26"
        android:layout_toLeftOf="@id/book_information_cover"
        android:layout_toStartOf="@id/book_information_cover"
        android:textSize="@dimen/text_size_24"
        tools:text="@string/default_name" />


    <TextView
        android:id="@+id/book_information_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/main_vertical_information"
        android:layout_marginEnd="@dimen/width_10"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_10"
        android:layout_marginStart="@dimen/width_32"
        android:layout_marginTop="@dimen/height_20"
        android:layout_toLeftOf="@id/book_information_state"
        android:layout_toStartOf="@id/book_information_state"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_black_3e3e3e"
        android:textSize="@dimen/text_size_30"
        android:textStyle="bold"
        tools:text="@string/default_name" />

    <TextView
        android:id="@+id/book_information_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_information_name"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_marginTop="@dimen/height_32"
        android:layout_toLeftOf="@id/book_information_cover"
        android:layout_toStartOf="@id/book_information_cover"
        android:lineSpacingExtra="@dimen/line_spacing_extra_1"
        android:lineSpacingMultiplier="1.15"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_gray_9b9b9b"
        android:textSize="@dimen/text_size_26"
        tools:text="@string/default_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_35"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_52"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:layout_toLeftOf="@id/book_information_cover"
        android:layout_toStartOf="@id/book_information_cover"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/book_information_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_book_category"
            android:gravity="center"
            android:textColor="@color/color_blue_0094d5"
            android:textSize="@dimen/text_size_22"
            android:layout_marginRight="@dimen/width_24"
            android:layout_marginEnd="@dimen/width_24"
            tools:text="@string/default_name" />

        <TextView
            android:id="@+id/book_information_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_24"
            tools:text="@string/default_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_8"
            android:layout_marginRight="@dimen/width_8"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_main_dot" />

        <TextView
            android:id="@+id/book_information_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_24"
            tools:text="@string/default_name" />
    </LinearLayout>

    <include
        android:id="@+id/book_information_divider"
        layout="@layout/layout_view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginStart="@dimen/width_32" />
</RelativeLayout>