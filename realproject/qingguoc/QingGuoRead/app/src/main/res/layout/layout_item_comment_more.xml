<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_more"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_88">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/check_whole_comment"
            android:textColor="@color/selector_cover_text"
            android:textSize="@dimen/text_size_28" />

        <ImageView
            android:layout_width="@dimen/width_28"
            android:layout_height="@dimen/height_28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/width_8"
            android:layout_marginStart="@dimen/width_8"
            android:contentDescription="@string/app_name"
            android:src="@drawable/selector_comment_more" />
    </LinearLayout>

</RelativeLayout>