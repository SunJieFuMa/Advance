<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_350"
    android:layout_margin="@dimen/width_17" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_literature_complete_information" />

    <ImageView
        android:id="@+id/literature_complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_136"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_literature_complete_button" />
</RelativeLayout>