<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_communal">

    <ProgressBar
        android:id="@+id/local_book_decompose_progress"
        android:layout_width="@dimen/width_50"
        android:layout_height="@dimen/height_50"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/loading_waiting"/>

    <TextView
        android:id="@+id/local_book_decompose_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_book_decompose_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_26"
        android:text="@string/loading_waiting"
        android:textColor="@color/color_gray_838383"
        android:textSize="@dimen/text_size_28" />

</RelativeLayout>