<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_98"
    android:orientation="vertical">

    <include layout="@layout/layout_view_divider"/>

    <LinearLayout
        android:id="@+id/local_files_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_98"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/local_files_bottom_scanning_file"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/default_name"
                android:textColor="@color/selector_local_files_button_text"
                android:textSize="@dimen/text_size_28"/>

            <View
                android:layout_width="@dimen/width_1"
                android:layout_height="@dimen/height_64"
                android:layout_gravity="center_vertical"
                android:background="@color/color_white_d6d6d6" />

            <TextView
                android:id="@+id/local_files_bottom_select_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/default_name"
                android:textColor="@color/selector_local_files_button_text"
                android:textSize="@dimen/text_size_28"/>

        </LinearLayout>

        <TextView
            android:id="@+id/local_files_bottom_add_shelf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/default_name"
            android:textColor="@color/selector_local_files_button_text"
            android:textSize="@dimen/text_size_28"/>
    </LinearLayout>

</LinearLayout>