<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_cc000000">

    <ImageView
        android:layout_width="@dimen/width_220"
        android:layout_height="match_parent"
        android:background="@color/color_black_33000000"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/read_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_432"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_read_guide" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_122"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_guide_close" />

</RelativeLayout>
