<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_98"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/comment_list_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:paddingLeft="@dimen/width_32"
        android:paddingStart="@dimen/width_32"
        android:paddingRight="@dimen/width_10"
        android:paddingEnd="@dimen/width_10"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/comment_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comment_list_back"
        android:layout_toEndOf="@id/comment_list_back"
        android:layout_marginLeft="@dimen/width_10"
        android:layout_marginRight="@dimen/width_10"
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/color_black_191919"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/comment_list_write"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/width_32"
        android:paddingRight="@dimen/width_32"
        android:text="@string/write_comment"
        android:textColor="@color/theme_primary"
        android:textSize="@dimen/text_size_34" />

    <include
        layout="@layout/layout_view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true" />
</RelativeLayout>