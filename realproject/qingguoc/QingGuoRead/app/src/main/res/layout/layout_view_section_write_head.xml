<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_98"
    android:background="@color/color_white">

    <RelativeLayout
        android:id="@+id/section_write_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/section_write_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/width_12"
            android:layout_marginRight="@dimen/width_12"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/width_20"
            android:paddingRight="@dimen/width_20"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/section_write_length"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/section_write_back"
            android:layout_toRightOf="@id/section_write_back"
            android:gravity="center_vertical"
            android:text="@string/zero"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_28" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/width_14"
            android:layout_marginRight="@dimen/width_14"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/section_write_save_draft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_18"
                android:paddingRight="@dimen/width_18"
                android:text="@string/save_draft"
                android:textColor="@color/theme_primary"
                android:textSize="@dimen/text_size_34" />

            <include
                layout="@layout/layout_view_divider"
                android:layout_width="@dimen/width_0.5"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/height_24"
                android:layout_marginTop="@dimen/height_24"/>

            <TextView
                android:id="@+id/section_write_publish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_18"
                android:paddingRight="@dimen/width_18"
                android:text="@string/publish"
                android:textColor="@color/selector_user_button_text"
                android:textSize="@dimen/text_size_34" />

        </LinearLayout>

        <include
            layout="@layout/layout_view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0.5"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>