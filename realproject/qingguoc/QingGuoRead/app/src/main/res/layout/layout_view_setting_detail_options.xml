<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/setting_detail_options_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_252424"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_98">

            <TextView
                android:id="@+id/setting_detail_options_fount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/width_32"
                android:layout_marginStart="@dimen/width_32"
                android:gravity="center"
                android:text="@string/text_size"
                android:textColor="@color/color_gray_9b9b9b"
                android:textSize="@dimen/text_size_24" />

            <ImageView
                android:id="@+id/setting_detail_options_fount_decrease"
                android:layout_width="@dimen/width_44"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/width_12"
                android:layout_marginRight="@dimen/width_12"
                android:layout_toEndOf="@id/setting_detail_options_fount"
                android:layout_toRightOf="@id/setting_detail_options_fount"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/icon_setting_detail_decrease" />

            <ImageView
                android:id="@+id/setting_detail_options_fount_increase"
                android:layout_width="@dimen/width_44"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/width_32"
                android:layout_marginLeft="@dimen/width_12"
                android:layout_marginRight="@dimen/width_32"
                android:layout_marginStart="@dimen/width_12"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/icon_setting_detail_increase" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/setting_detail_options_fount_decrease"
                android:layout_toLeftOf="@id/setting_detail_options_fount_increase"
                android:layout_toRightOf="@id/setting_detail_options_fount_decrease"
                android:layout_toStartOf="@id/setting_detail_options_fount_increase">

                <View
                    android:id="@+id/setting_detail_options_fount_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_4"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/width_50"
                    android:layout_marginRight="@dimen/width_50"
                    android:background="@color/color_gray_9b9b9b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/setting_detail_options_fount_10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/setting_detail_options_fount_image_10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/width_10"
                            android:paddingRight="@dimen/width_10"
                            android:src="@drawable/selector_dark_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/setting_detail_options_fount_15"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/setting_detail_options_fount_image_15"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/width_10"
                            android:paddingRight="@dimen/width_10"
                            android:src="@drawable/selector_dark_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/setting_detail_options_fount_20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/setting_detail_options_fount_image_20"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/width_10"
                            android:paddingRight="@dimen/width_10"
                            android:src="@drawable/selector_dark_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/setting_detail_options_fount_25"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/setting_detail_options_fount_image_25"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/width_10"
                            android:paddingRight="@dimen/width_10"
                            android:src="@drawable/selector_dark_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/setting_detail_options_fount_30"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/setting_detail_options_fount_image_30"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/width_10"
                            android:paddingRight="@dimen/width_10"
                            android:layout_centerInParent="true"
                            android:src="@drawable/selector_dark_font" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_98"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_detail_options_spacing"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/width_32"
                android:layout_marginStart="@dimen/width_32"
                android:gravity="center"
                android:text="@string/row_spacing"
                android:textColor="@color/color_gray_9b9b9b"
                android:textSize="@dimen/text_size_24" />

            <RadioGroup
                android:id="@+id/setting_detail_options_spacing_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/width_32"
                android:layout_marginLeft="@dimen/width_12"
                android:layout_marginRight="@dimen/width_32"
                android:layout_marginStart="@dimen/width_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.quduquxie.base.widget.CustomRadioButton
                    android:id="@+id/setting_detail_options_spacing_0_2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_62"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button_left"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/selector_spacing_0_2"
                    android:drawableStart="@drawable/selector_spacing_0_2"
                    android:gravity="center" />

                <com.quduquxie.base.widget.CustomRadioButton
                    android:id="@+id/setting_detail_options_spacing_0_5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_62"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button_middle"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/selector_spacing_0_5"
                    android:drawableStart="@drawable/selector_spacing_0_5"
                    android:gravity="center" />

                <com.quduquxie.base.widget.CustomRadioButton
                    android:id="@+id/setting_detail_options_spacing_1_0"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_62"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button_right"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/selector_spacing_1_0"
                    android:drawableStart="@drawable/selector_spacing_1_0"
                    android:gravity="center" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_98"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_detail_options_typeface"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/width_32"
                android:layout_marginStart="@dimen/width_32"
                android:gravity="center"
                android:text="@string/typeface"
                android:textColor="@color/color_gray_9b9b9b"
                android:textSize="@dimen/text_size_24" />

            <RadioGroup
                android:id="@+id/setting_detail_options_typeface_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_62"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/width_32"
                android:layout_marginLeft="@dimen/width_12"
                android:layout_marginRight="@dimen/width_32"
                android:layout_marginStart="@dimen/width_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/setting_detail_options_typeface_song"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/width_8"
                    android:layout_marginRight="@dimen/width_8"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/typeface_song"
                    android:textColor="@color/selector_button_text"
                    android:textSize="@dimen/text_size_28" />

                <RadioButton
                    android:id="@+id/setting_detail_options_typeface_system"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/width_8"
                    android:layout_marginStart="@dimen/width_8"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="@string/typeface_system"
                    android:textColor="@color/selector_button_text"
                    android:textSize="@dimen/text_size_28" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_98"
            android:layout_marginBottom="@dimen/height_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_detail_options_flip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/width_32"
                android:layout_marginStart="@dimen/width_32"
                android:gravity="center"
                android:text="@string/flip_pattern"
                android:textColor="@color/color_gray_9b9b9b"
                android:textSize="@dimen/text_size_24" />

            <RadioGroup
                android:id="@+id/setting_detail_options_flip_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_62"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/width_32"
                android:layout_marginLeft="@dimen/width_12"
                android:layout_marginRight="@dimen/width_32"
                android:layout_marginStart="@dimen/width_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.quduquxie.base.widget.CustomRadioButton
                    android:id="@+id/setting_detail_options_flip_simulation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button_left"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_dark_simulation"
                    android:drawablePadding="@dimen/width_12"
                    android:drawableStart="@drawable/selector_dark_simulation"
                    android:gravity="center"
                    android:text="@string/simulation"
                    android:textColor="@color/selector_dark_setting_text"
                    android:textSize="@dimen/text_size_24" />

                <com.quduquxie.base.widget.CustomRadioButton
                    android:id="@+id/setting_detail_options_flip_translation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button_middle"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_dark_translation"
                    android:drawablePadding="@dimen/width_12"
                    android:drawableStart="@drawable/selector_dark_translation"
                    android:gravity="center"
                    android:text="@string/translation"
                    android:textColor="@color/selector_dark_setting_text"
                    android:textSize="@dimen/text_size_24" />

                <com.quduquxie.base.widget.CustomRadioButton
                    android:id="@+id/setting_detail_options_flip_up_down"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dark_radio_button_right"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_dark_up_down"
                    android:drawablePadding="@dimen/width_12"
                    android:drawableStart="@drawable/selector_dark_up_down"
                    android:gravity="center"
                    android:text="@string/up_down"
                    android:textColor="@color/selector_dark_setting_text"
                    android:textSize="@dimen/text_size_24" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/setting_detail_options_change_mode"
        android:layout_width="@dimen/width_70"
        android:layout_height="@dimen/height_70"
        android:layout_above="@id/setting_detail_options_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/height_40"
        android:layout_marginEnd="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32"
        android:background="@drawable/light_reading_mode"
        android:contentDescription="@string/app_name" />
</RelativeLayout>