<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_directory_content"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_84">

    <TextView
        android:id="@+id/file_directory_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/width_16"
        android:layout_marginRight="@dimen/width_16"
        android:gravity="center"
        android:text="@string/default_name"
        android:textColor="@color/color_gray_6e6e6e"
        android:textSize="@dimen/text_size_26" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/file_directory_name"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_local_file_directory_split" />

</RelativeLayout>