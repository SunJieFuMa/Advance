<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chapter_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_118"
    android:background="@drawable/background_light_view_holder">

    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/width_32"
        android:paddingRight="@dimen/width_32"
        android:textColor="@color/color_black_3e3e3e"
        android:textSize="@dimen/text_size_30"
        tools:text="@string/default_name" />

    <include
        android:id="@+id/chapter_divider"
        layout="@layout/layout_view_communal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/width_32"
        android:layout_marginRight="@dimen/width_32" />
</RelativeLayout>