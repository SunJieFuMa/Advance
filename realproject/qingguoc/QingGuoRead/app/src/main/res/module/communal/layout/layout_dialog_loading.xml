<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/width_20">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/width_60"
        android:paddingRight="@dimen/width_60"
        android:paddingTop="@dimen/height_10"
        android:paddingBottom="@dimen/height_10"
        android:background="@drawable/background_loading_dialog">

        <ProgressBar
            android:id="@+id/loading_progress"
            style="@style/CircleProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/width_30"
            android:layout_marginEnd="@dimen/width_30"
            android:indeterminateDuration="500" />

        <TextView
            android:id="@+id/loading_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/loading_progress"
            android:layout_toEndOf="@id/loading_progress"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_28"
            android:text="@string/default_name"/>
    </RelativeLayout>
</RelativeLayout>