<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_45">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/width_45"
            android:layout_height="@dimen/height_45"
            android:layout_marginLeft="@dimen/width_4"
            android:layout_marginStart="@dimen/width_4"
            android:scaleType="fitXY"
            android:src="@drawable/icon_word_count" />

        <TextView
            android:id="@+id/book_word_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/width_18"
            android:layout_marginStart="@dimen/width_18"
            android:text="@string/zero"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_32" />

        <TextView
            android:id="@+id/book_word_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/width_8"
            android:layout_marginStart="@dimen/width_8"
            android:gravity="center_vertical"
            android:text="@string/unit_billion"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_26" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width_45"
            android:layout_height="@dimen/height_45"
            android:layout_marginLeft="@dimen/width_4"
            android:layout_marginStart="@dimen/width_4"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/icon_read_count" />

        <TextView
            android:id="@+id/book_read_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/width_18"
            android:layout_marginStart="@dimen/width_18"
            android:gravity="center_vertical"
            android:text="@string/zero"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_32" />

        <TextView
            android:id="@+id/book_read_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/width_8"
            android:layout_marginStart="@dimen/width_8"
            android:gravity="center_vertical"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_26"
            tools:text="@string/unit_billion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width_45"
            android:layout_height="@dimen/height_45"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/icon_follow_count" />

        <TextView
            android:id="@+id/book_follow_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/width_18"
            android:layout_marginStart="@dimen/width_18"
            android:gravity="center_vertical"
            android:text="@string/zero"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_32" />

        <TextView
            android:id="@+id/book_follow_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/width_4"
            android:layout_marginLeft="@dimen/width_8"
            android:layout_marginRight="@dimen/width_4"
            android:layout_marginStart="@dimen/width_8"
            android:gravity="center_vertical"
            android:textColor="@color/color_black_3e3e3e"
            android:textSize="@dimen/text_size_26"
            tools:text="@string/unit_ten_thousand" />
    </LinearLayout>
</RelativeLayout>