<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/communal_prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/color_blue_8fabb7"
        android:textSize="@dimen/text_size_28"
        tools:text="@string/default_name" />

    <ImageView
        android:id="@+id/communal_prompt_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/communal_prompt_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/height_56"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        tools:src="@drawable/icon_default_prompt" />

</RelativeLayout>