<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_94"
    android:layout_alignParentBottom="true"
    android:background="@color/color_white_f9f9f9">

    <include
        layout="@layout/layout_view_communal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/cover_bottom_read"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/width_44"
                    android:layout_height="@dimen/height_44"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/selector_cover_read" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/width_14"
                    android:layout_marginStart="@dimen/width_14"
                    android:text="@string/read_immediately"
                    android:textColor="@color/selector_cover_text"
                    android:textSize="@dimen/text_size_28" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/width_0.5"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_10"
            android:layout_marginBottom="@dimen/height_10"
            android:background="@color/color_white_d8d8d8"/>

        <RelativeLayout
            android:id="@+id/cover_bottom_insert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/icon_cover_read">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/width_44"
                    android:layout_height="@dimen/height_44"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/selector_cover_insert" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/width_14"
                    android:layout_marginStart="@dimen/width_14"
                    android:text="@string/insert_shelf"
                    android:textColor="@color/selector_cover_text"
                    android:textSize="@dimen/text_size_28" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>