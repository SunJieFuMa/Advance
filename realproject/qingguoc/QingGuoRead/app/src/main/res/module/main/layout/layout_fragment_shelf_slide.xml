<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shelf_slide_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingEnd="@dimen/width_600"
        android:paddingLeft="@dimen/width_0"
        android:paddingRight="@dimen/width_600"
        android:paddingStart="@dimen/width_0"
        app:layout_heightPercent="40%" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shelf_slide_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingEnd="@dimen/width_600"
        android:paddingLeft="@dimen/width_0"
        android:paddingRight="@dimen/width_600"
        android:paddingStart="@dimen/width_0"
        app:layout_heightPercent="60%" />
</android.support.percent.PercentRelativeLayout>