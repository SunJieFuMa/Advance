<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white_f4f5f7">

    <RelativeLayout
        android:id="@+id/prompt_search"
        android:layout_width="@dimen/width_424"
        android:layout_height="@dimen/height_58"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/height_32"
        android:layout_marginTop="@dimen/height_32"
        android:background="@drawable/background_selected_search"
        android:elevation="@dimen/height_6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="@dimen/width_40"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:src="@drawable/selector_main_selected_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_8"
                android:layout_marginStart="@dimen/width_8"
                android:text="@string/search_prompt"
                android:textColor="@color/color_orange_da6254"
                android:textSize="@dimen/text_size_28" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>