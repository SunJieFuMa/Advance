<?xml version="1.0" encoding="utf-8"?>
<com.quduquxie.base.widget.ShelfSlideRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shelf_slide_book"
    android:layout_width="@dimen/width_152"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/height_32"
    android:layout_marginEnd="@dimen/width_2"
    android:layout_marginLeft="@dimen/width_32"
    android:layout_marginRight="@dimen/width_2"
    android:layout_marginStart="@dimen/width_32"
    android:layout_marginTop="@dimen/height_32"
    android:background="@drawable/background_shadow"
    android:elevation="@dimen/height_4">

    <ImageView
        android:id="@+id/shelf_slide_book_cover"
        android:layout_width="@dimen/width_152"
        android:layout_height="@dimen/height_214"
        android:scaleType="fitXY"
        android:src="@drawable/icon_cover_default" />

    <ImageView
        android:id="@+id/shelf_slide_book_state"
        android:layout_width="@dimen/width_32"
        android:layout_height="@dimen/height_38"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/width_8"
        android:layout_marginRight="@dimen/width_8"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/icon_book_finish"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/shelf_slide_book_check"
        android:layout_width="@dimen/width_50"
        android:layout_height="@dimen/height_50"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/icon_shelf_delete_selected"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/shelf_slide_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shelf_slide_book_cover"
        android:layout_marginLeft="@dimen/width_14"
        android:layout_marginRight="@dimen/width_14"
        android:layout_marginTop="@dimen/height_24"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/color_black_191919"
        android:textSize="@dimen/text_size_24"
        tools:text="@string/default_message" />

    <TextView
        android:id="@+id/shelf_slide_book_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shelf_slide_book_name"
        android:layout_marginLeft="@dimen/width_14"
        android:layout_marginRight="@dimen/width_14"
        android:layout_marginTop="@dimen/height_20"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/color_gray_686868"
        android:textSize="@dimen/text_size_24"
        tools:text="@string/default_name" />

    <TextView
        android:id="@+id/shelf_slide_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_30"
        android:layout_marginLeft="@dimen/width_14"
        android:layout_marginRight="@dimen/width_14"
        android:layout_marginTop="@dimen/height_22"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/color_gray_686868"
        android:textSize="@dimen/text_size_22"
        tools:text="@string/default_name" />

    <ImageView
        android:id="@+id/shelf_slide_book_author_avatar"
        android:layout_width="@dimen/width_70"
        android:layout_height="@dimen/height_70"
        android:layout_above="@id/shelf_slide_book_author"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_avatar"
        android:elevation="@dimen/height_4"
        android:src="@drawable/icon_avatar_default" />
</com.quduquxie.base.widget.ShelfSlideRelativeLayout>