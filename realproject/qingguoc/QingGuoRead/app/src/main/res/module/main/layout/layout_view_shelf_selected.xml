<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_98">

    <TextView
        android:id="@+id/shelf_delete_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/width_12"
        android:layout_marginRight="@dimen/width_12"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/width_20"
        android:paddingRight="@dimen/width_20"
        android:text="@string/cancel"
        android:textColor="@color/theme_primary"
        android:textSize="@dimen/text_size_34" />

    <TextView
        android:id="@+id/shelf_delete_selected"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/color_black_191919"
        android:textSize="@dimen/text_size_36"
        tools:text="@string/default_name" />

    <include
        layout="@layout/layout_view_communal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true" />
</RelativeLayout>