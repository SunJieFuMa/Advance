<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_98">

    <ImageView
        android:id="@+id/shelf_head_search"
        android:layout_width="@dimen/width_80"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/width_12"
        android:layout_marginRight="@dimen/width_12"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingLeft="@dimen/width_20"
        android:paddingRight="@dimen/width_20"
        android:src="@drawable/selector_search" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shelf_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_black_191919"
            android:textSize="@dimen/text_size_34"
            tools:text="@string/book_shelf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_4"
            android:layout_marginRight="@dimen/width_4"
            android:text="@string/slash"
            android:textColor="@color/color_black_2c2c2c"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:id="@+id/shelf_head_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_black_2c2c2c"
            android:textSize="@dimen/text_size_28"
            tools:text="@string/book_shelf" />
    </LinearLayout>

    <ImageView
        android:id="@+id/shelf_head_more"
        android:layout_width="@dimen/width_78"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/width_12"
        android:layout_marginRight="@dimen/width_12"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingLeft="@dimen/width_20"
        android:paddingRight="@dimen/width_20"
        android:src="@drawable/selector_shelf_more" />

    <include
        android:id="@+id/shelf_head_divider"
        layout="@layout/layout_view_communal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_0.5"
        android:layout_alignParentBottom="true" />
</RelativeLayout>